<mvc:View controllerName="sap.training.controller.C_R_D" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns="sap.ui.commons"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<t:Table title="Products" rows="{/Products}">
        <t:columns>
            <t:Column>
                <t:label>
                    <Label text="Id"/>
                </t:label>
                <t:template>
                    <TextView text="{ID}"/>
                </t:template>
            </t:Column>

            <t:Column>
                <t:label>
                    <Label text="Name"/>
                </t:label>
                <t:template>
                    <TextView text="{Name}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Description"/>
                </t:label>
                <t:template>
                    <TextView text="{Description}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Release Date"/>
                </t:label>
                <t:template>
                    <TextView text="{
                        path: 'ReleaseDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {style: 'medium' }
                    }"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Discontinued Date"/>
                </t:label>
                <t:template>
                     <TextView text="{
                        path: 'DiscontinuedDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {style: 'medium' }
                    }"/>
                </t:template>
            </t:Column>
            
             <t:Column>
                <t:label>
                    <Label text="Rating"/>
                </t:label>
                <t:template>
                   <RatingIndicator editable="false"
                                    value="{Rating}"/>
                </t:template>
            </t:Column>
            
             <t:Column>
                <t:label>
                    <Label text="Price"/>
                </t:label>
                <t:template>
                    <TextView text="{
                        path: 'Price',
                        type: 'sap.ui.model.type.Float',
                        formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}
                    }"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Action"/>
                </t:label>
                <t:template>
                   <core:Icon src="sap-icon://delete" press="onDeleteProduct" app:id="{ID}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>

    <f:SimpleForm>
		<f:content>
	        <core:Title text="New Product" />
	        
	        <Label text="Id"/>
		    <TextField value="{newProduct>/ID}"/>
		    
		    <Label text="Name"/>
		    <TextField value="{newProduct>/Name}"/>
		    
		    <Label text="Description"/>
		    <TextField value="{newProduct>/Description}"/>
		    
		    <Label text="Release Date"/>
		    <DatePicker value="{
		        path: 'newProduct>/ReleaseDate',
		        type: 'sap.ui.model.type.Date',
		        formatOptions: {source: {pattern: 'yyyy-MM-dd'}}
		    }"/>
		    
		    <Label text="Discontinued Date"/>
		    <DatePicker value="{
		        path: 'newProduct>/DiscontinuedDate',
		        type: 'sap.ui.model.type.Date',
		        formatOptions: {source: {pattern: 'yyyy-MM-dd'}}
		    }"/>
		    
		     <Label text="Rating"/>
		     <RatingIndicator value="{newProduct>/Rating}"/>
			
			<Label text="Price"/>
			<TextField value="{
                        path: 'newProduct>/Price',
                        type: 'sap.ui.model.type.Float',
                        formatOptions: {minFractionDigits: 2, maxFractionDigits: 2},
                        constraints: {minimum: 0}
                    }"/>
            
            <Label text=""/>
        	<Button text="Create" press="onCreateProduct" width="150px"/>
		
		</f:content>
		
	</f:SimpleForm>
	
	<html:br/>
	
	<Button text="Get Highest Id" press="onGetHighestId" width="150px"/>
		
</mvc:View>