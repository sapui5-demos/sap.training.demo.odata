<mvc:View controllerName="sap.training.controller.Binding_Specific_Parameters" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:t="sap.ui.table" xmlns="sap.ui.commons">

	<t:Table rows="{path: '/Products', parameters: {expand:'Category, Supplier'} }" title="Products - expand:'Category, Supplier'">
		<t:columns>
			<t:Column>
				<t:label>
					<Label text="Id"/>
				</t:label>
				<t:template>
					<TextView text="{ID}"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Name"/>
				</t:label>
				<t:template>
					<TextView text="{Name}"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Description"/>
				</t:label>
				<t:template>
					<TextView text="{Description}"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Release Date"/>
				</t:label>
				<t:template>
					<TextView text="{ path: 'ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium' } }"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Discontinued Date"/>
				</t:label>
				<t:template>
					<TextView text="{ path: 'DiscontinuedDate', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium' } }"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Rating"/>
				</t:label>
				<t:template>
					<RatingIndicator editable="false" value="{Rating}"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Price"/>
				</t:label>
				<t:template>
					<TextView text="{ path: 'Price', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2} }"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Category"/>
				</t:label>
				<t:template>
					<TextView text="{Category/Name}"/>
				</t:template>
			</t:Column>
			<t:Column>
				<t:label>
					<Label text="Supplier"/>
				</t:label>
				<t:template>
					<TextView text="{Supplier/Name}"/>
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
